{
    "version": 2,
    "builds": [
      {
        "src": "app.py",
        "use": "@vercel/python",
        "config": {
          "runtime": "python3.10"  // <--- PINNED HERE
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "app.py"
      }
    ],
    "installCommand": "pip install --upgrade pip setuptools && pip install -r requirements.txt"
  }
